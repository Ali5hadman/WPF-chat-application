        mc:Ignorable="d"
        Title="log_in" Height="450" Width="800" Loaded="login_loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="55,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="52" Width="227" FontSize="36" FontWeight="Bold"><Run Foreground="#FFA39642" Text="USERNAME:"/></TextBlock>

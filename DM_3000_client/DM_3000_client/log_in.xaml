        <TextBox x:Name="usertxt" HorizontalAlignment="Left" Height="52" Margin="312,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="298" FontSize="24"/>
        <PasswordBox x:Name="passtxt" HorizontalAlignment="Left" Margin="312,197,0,0" VerticalAlignment="Top" Height="54" Width="298" FontSize="24"/>
        <Button x:Name="lego_btn" Content="LEGO -&gt;" HorizontalAlignment="Left" Margin="228,285,0,0" VerticalAlignment="Top" Width="293" Height="43" FontSize="24" Click="lego_btn_Click" Background="#FFD3C461" BorderBrush="#FF3F1010"/>
        <Button x:Name="nt_user" Content=":O NOT A USER?!" HorizontalAlignment="Left" Margin="228,352,0,0" VerticalAlignment="Top" Width="293" Height="43" FontSize="24" Click="nt_user_Click" Background="#FFD3C461" />
        <TextBlock HorizontalAlignment="Left" Margin="68,24,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="659" FontSize="36" Text="WELCOME TO DIRECT MESSAGING 3000!" Foreground="#FFA39642"/>
        <TextBlock HorizontalAlignment="Left" Margin="255,78,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="38" Width="266" FontSize="20" Foreground="Black" FontFamily="Segoe UI Semibold"><Run Text="---End to End "/><Run Text="Encrypted ;)---"/></TextBlock>

    </Grid>
</Window>
